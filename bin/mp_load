#!/usr/bin/env node
/**
 *  initializing of load
 */
(function() {
  var prog       = require('commander'),
      utils      = require('../lib/utils');

  prog.version("0.0.1")
  .option("-s, --server <server>", "server name to get data from (default is localhost)")
  .option("-i, --id <id>", "id under which the mp should be stored")
  .option("-c, --container <container>", "container to load/prepare for exec")
  .option("-p, --port <port>", "from port (default is  5984)", parseInt)
  .parse(process.argv);

  if(prog.id && prog.container){
    var con = {
      hostname: prog.server ? prog.server : "localhost",
      port:     prog.port   ? prog.port   : 8001,
      path: "/" + prog.id + "/ctrl/" + prog.container,
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      }
    };

    var req =  utils.httpreq(con)
    req.write("load")
    req.end();

  }
})();